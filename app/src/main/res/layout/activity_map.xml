<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE9E3">

    <!-- MapFragment integrado -->
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapActivity" />

    <!-- Pantalla de carga -->
    <LinearLayout
        android:id="@+id/progressLayout"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDE9E3"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="true"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/txtLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando mapa de hospitales..."
            android:textSize="18sp"
            android:textColor="#333"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Tarjeta de información de hospital seleccionado -->
    <LinearLayout
        android:id="@+id/hospitalInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_bottom_card"
        android:padding="16dp"
        android:visibility="gone"
        android:elevation="8dp">

        <TextView
            android:id="@+id/hospitalExtraInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingTop="8dp"/>

        <TextView
            android:id="@+id/hospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/hospitalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/hospitalPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"
            android:text="Teléfono: -" />

        <TextView
            android:id="@+id/hospitalWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"
            android:text="Sitio web: -" />

        <TextView
            android:id="@+id/hospitalOpening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginBottom="12dp"
            android:text="Horario: -" />

        <TextView
            android:id="@+id/hospitalRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificación: -"
            android:textSize="14sp"
            android:paddingTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnCloseCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:textAllCaps="false"
                android:padding="12dp"
                android:layout_marginEnd="16dp" />

            <Button
                android:id="@+id/btnOpenInMaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ir al centro médico"
                android:textAllCaps="false"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
