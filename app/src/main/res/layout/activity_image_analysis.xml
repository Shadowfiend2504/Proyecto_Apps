            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Procesa la foto capturada mediante inteligencia artificial para obtener resultados inmediatos."
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- ðŸ–¼ï¸ Vista previa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vista previa de la imagen:"
                android:textColor="#333"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/imagePreview"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"
                android:background="@drawable/image_border"
                android:contentDescription="Vista previa"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtImageResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esperando anÃ¡lisis..."
